<!-- _signup_form.html.erb -->

<%= form_for @user, data: {abide:''}, html: {class: "custom"} do |f| %>

	<div class="row collapse">
		<div class="small-4 columns">
			<span class="prefix">email</span>
		</div>
		<div class="small-8 columns">
			<%= f.text_field :email, html: {type:"email"} %>
		</div>
	</div>
	<br>

	<div class="row collapse">
		<div class="small-4 columns">
			<span class="prefix">phone #</span>
		</div>
		<div class="small-8 columns">
			<%= f.telephone_field :phone_number %>
		</div>
	</div>

	<%= f.select :carrier, [["choose your mobile carrier"],["Bell"],["Telus"],["Rogers"],["Fido"],["Koodo"],["Wind"]], class: "select"%>
	<br>

	<div class="row collapse">
		<div class="small-4 columns">
			<span class="prefix">password</span>
		</div>
		<div class="small-8 columns">
			<%= f.password_field :password %>
		</div>
	</div>

	<div class="row collapse">
		<div class="small-4 columns">
			<span class="prefix">again to confirm</span>
		</div>
		<div class="small-8 columns">
			<%= f.password_field :password_confirmation %>
		</div>
	</div>
	<br>

	<div id="location_zone">

		<!-- find location button and field for city to be filled by js
		<div class="row collapse">
			<div class="small-6 columns">
				<%= submit_tag 'find my location', type:'button', class:"button secondary", id:"find_location" %>
			</div>
			<div class="small-6 columns">
				<!-- insert the return value from geocoder here? -->
			</div>
		</div>

			<!-- longitude and latitude filled by js -->
			<div class="row collapse">

				<div class="small-3 columns">
					<span class="prefix">
						<%= f.label "longitude" %>
					</span>
				</div>
				<div class="small-3 columns">
					<%= f.telephone_field :longitude %>
				</div>

				<div class="small-3 columns">
					<span class="prefix">
						<%= f.label "latitude" %>
					</span>
				</div>
				<div class="small-3 columns">
					<%= f.telephone_field :latitude %>
				</div>

			</div>

	</div> <!-- end of location_zone -->
	<br>
	<%= f.submit "sign me up", class: "button success expand" %>
	<!-- <button class="small">actually no thanks</button> -->
<!-- it'd be nice if the no thanks button could take people to somewhere else -->
<!-- maybe it could say 'too hungry for this now' and redirect to verdigris -->
<% end %>