<div class="row" id="landing_box">
	<div class="large-4 columns push-4" id="description">
		<h1>WeatherTF</h1>
		<h4>tell me what's up.</h4>
		<button data-reveal-id="signup">Get yrself signed up!</button>
		<button data-reveal-id="login">I am!</button>
	</div>
</div>


<!-- ----------- sign-up form ------------- -->

<div id="signup" class="reveal-modal medium">
	<div class="row">
		<div class="large-12 columns">
			<%= form_for @user, html: {class: "custom"} do |f| %>

				<div class="row collapse">
					<div class="large-4 columns">
						<span class="prefix">username</span>
					</div>
					<div class="large-8 columns">
						<%= f.text_field :username %>
					</div>
				</div>

				<div class="row collapse">
					<div class="large-4 columns">
						<span class="prefix">email</span>
					</div>
					<div class="large-8 columns">
						<%= f.text_field :email %>
					</div>
				</div>
				<br>

				<div class="row collapse">
					<div class="large-4 columns">
						<span class="prefix">phone #</span>
					</div>
					<div class="large-8 columns">
						<%= f.telephone_field :phone_number %>
					</div>
				</div>

				<%= f.select :carrier, [["choose your mobile carrier"],["Bell"],["Telus"],["Rogers"],["Fido"],["Koodo"],["Wind"]], class: "select"%>
				<br>

				<div class="row collapse">
					<div class="large-4 columns">
						<span class="prefix">password</span>
					</div>
					<div class="large-8 columns">
						<%= f.text_field :password %>
					</div>
				</div>

				<div class="row collapse">
					<div class="large-4 columns">
						<span class="prefix">confirm</span>
					</div>
					<div class="large-8 columns">
						<%= f.text_field :password_confirmation %>
					</div>
				</div>
				<br>

				<div id="location_zone">

					<!-- find location button and field for city to be filled by js -->
					<div class="row collapse">
						<div class="large-6 columns">
							<%= submit_tag 'find my location', type:'button', class:"button secondary", id:"find_location" %>
						</div>
						<div class="large-6 columns">
							<!-- insert the return value from geocoder here? -->
						</div>
					</div>

					<!-- longitude field filled by js-->
					<div class="row collapse">
						<div class="large-6 columns">
							<span class="prefix">
								<%= f.label "longitude" %>
							</span>
						</div>
						<div class="large-6 columns">
							<%= f.telephone_field :lon %>
						</div>
					</div>		

					<!-- latitude field filled by js-->
					<div class="row collapse">
						<div class="large-6 columns">
							<span class="prefix">
								<%= f.label "latitude" %>
							</span>
						</div>
						<div class="large-6 columns">
							<%= f.telephone_field :lat %>
						</div>
					</div>

				</div> <!-- end of location_zone -->
				<%= f.submit "sign up", class: "button" %>

			<% end %>

		</div>
	</div>
</div>

<!-- ------------ login reveal form   ---------- -->

<div id="login" class="reveal-modal small">
	<div class="row">
		<div class="large-12 columns">
			<%= form_tag sessions_path do %>
				<div class="row collapse">
					<div class="large-4 columns">
						<span class="prefix">username</span>
					</div>
					<div class="large-8 columns">
						<%=  text_field_tag :username, params[:username] %>
					</div>
				</div>
				<div class="row collapse">
					<div class="large-4 columns">
						<span class="prefix">password</span>
					</div>
					<div class="large-8 columns">
						<%= password_field_tag :password %>
					</div>
				</div>
				<%= submit_tag "login", class:"button large-12 columns" %>
			<% end %>
		</div>
	</div>
	<a class="close-reveal-modal">&#215;</a>
</div>
