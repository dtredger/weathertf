<div class="row">
	<%= image_tag(@background) %>
	<div class="large-4 columns push-4" id="description">
		<h1>WeatherTF</h1>
		<h4>tell me what's up.</h4>
		<button data-reveal-id="signup">sign yr self up!</button>
		<button id="find_location" data-reveal-id="locate">find me</button>
	</div>
</div>


<div id="signup" class="reveal-modal medium">
	<div class="row">
		<div class="large-12 columns">
			<%= form_for @user, html: {class: "custom"} do |f| %>
				<%= f.label "user name" %>
				<%= f.text_field :username %>
				<br>
				<%= f.text_field :email %>
				<br>
				<%= f.label "phone" %>
				<div class="row collapse">
					<div class="large-2 columns">
						<span class="prefix">#</span>
					</div>
					<div class="large-10 columns">
						<span data-tooltip="top" class="has-tip tip-top" title="enter your 10-digit number" >
							<%= f.telephone_field :phone_number %>
						</span>
					</div>
				</div>
				<br>
				<%= f.select :carrier, [["choose your mobile carrier"],["Bell"],["Telus"],["Rogers"]], class: "select"%>
				<br>
				<%= f.label "password" %>
				<%= f.password_field :password %>
				<br>
				<%= f.label "confirm password" %>
				<%= f.password_field :password_confirmation %>
				<br>
				<div class="row collapse">
					<div class="large-6 columns">
						<span class="prefix">
							<%= f.label "longitude" %>
						</span>
					</div>
					<div class="large-6 columns">
						<%= f.telephone_field :lon %>
					</div>
				</div>
				<div class="row collapse">
					<div class="large-6 columns">
						<span class="prefix">
							<%= f.label "latitude" %>
						</span>
					</div>
					<div class="large-6 columns">
						<%= f.telephone_field :lat %>
					</div>
				</div>

				<%= f.submit "sign up", class: "button" %>
			<% end %>
		</div>
	</div>
	<a class="close-reveal-modal">&#215;</a>
</div>

<div id="locate" class="reveal-modal">
	<div class="row">
		<div class="large-12 columns">
			<p>map</p>
			<div id="map" width="400", height="350">
			</div>
		</div>
	</div>
	<a class="close-reveal-modal">&#215;</a>
</div>
